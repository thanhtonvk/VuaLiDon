<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".App.Fragment.SearchFragment">

    <TextView
        android:id="@+id/lg_1"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:background="@color/black"
        android:drawableLeft="@drawable/ic_video"
        android:gravity="center"
        android:text="Vua"
        android:textColor="@color/white"
        android:textSize="40sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/lg_1"
        android:background="@color/black"
        android:gravity="center"
        android:text="lidon"
        android:textColor="#FDD835"
        android:textSize="40sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/lg_1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/lg_1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_tatcacacphim"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TẤT CẢ PHIM"
                    android:textColor="#FFD600"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PHIM KINH DỊ"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <org.lucasr.twowayview.TwoWayView
                    android:id="@+id/lv_phimkinhdi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:numColumns="2"
                    android:orientation="horizontal" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PHIM HÀNH ĐỘNG"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <org.lucasr.twowayview.TwoWayView
                    android:id="@+id/lv_phimhanhdong"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:numColumns="2"
                    android:orientation="horizontal" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PHIM HOẠT HÌNH"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <org.lucasr.twowayview.TwoWayView
                    android:id="@+id/lv_hoathinh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:numColumns="2"
                    android:orientation="horizontal" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PHIM TÂM LÝ - TÌNH CẢM"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <org.lucasr.twowayview.TwoWayView
                    android:id="@+id/lv_phimtamlytinhcam"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:numColumns="2"
                    android:orientation="horizontal" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PHIM HÀI"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <org.lucasr.twowayview.TwoWayView
                    android:orientation="horizontal"
                    android:id="@+id/lv_phimhai"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:numColumns="2"
                     />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PHIM VIỄN TƯỞNG"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/white" />

                <org.lucasr.twowayview.TwoWayView
                    android:id="@+id/lv_vientuong"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:numColumns="2"
                    android:orientation="horizontal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PHIM NGÔN TÌNH"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <org.lucasr.twowayview.TwoWayView
                    android:id="@+id/lv_ngontinh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:numColumns="2"
                    android:orientation="horizontal" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</RelativeLayout>